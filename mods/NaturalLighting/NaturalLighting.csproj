<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Author>Bomret</Author>
    <PackageDescription>A Cities: Skylines mod that adjusts in-game lighting to look more natural.</PackageDescription>
    <Version>1.0.0</Version>
    <AssemblyVersion>1.0.0</AssemblyVersion>
    <FileVersion>1.0.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="Assembly-CSharp" Private="false" />
    <Reference Include="ColossalManaged" Private="false" />
    <Reference Include="ICities" Private="false" />
    <Reference Include="UnityEngine" Private="false" />
  </ItemGroup>

  <ItemGroup>
    <None Update="PreviewImage.png" CopyToPublishDirectory="PreserveNewest" />
    <None Update="README.md" CopyToPublishDirectory="PreserveNewest" />
    <None Update="CHANGELOG.md" CopyToPublishDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <Translations Include="Locales/*.restext" />
  </ItemGroup>

  <Target Name="CreateDefaultTranslation" BeforeTargets="BeforeBuild">
    <!-- Use a copy of en-US-specific text resource file for neutral-language resource generation -->
    <Copy SourceFiles="Locales/strings.en.restext" DestinationFiles="Locales/strings.restext" />
  </Target>

  <Target Name="DeployToLocalModDirectory" AfterTargets="Publish">
    <!-- Deployment to local mod directory after publish -->
    <PropertyGroup>
      <PublishLocalesDir>$(PublishDir)Locales/</PublishLocalesDir>
      <LocalModDir>$(LocalAppData)/Colossal Order/Cities_Skylines/Addons/Mods/$(ProjectName)/</LocalModDir>
    </PropertyGroup>

    <MakeDir Directories="$(PublishLocalesDir)" />

    <GenerateResource ExecuteAsTool="false" Sources="@(Translations)" OutputResources="@(Translations->'$(PublishLocalesDir)%(Filename).resources')">
      <Output TaskParameter="OutputResources" ItemName="TextXmlResources" />
    </GenerateResource>

    <ItemGroup>
      <ModFiles Include="$(PublishDir)*.*" />
      <ResourceFiles Include="$(PublishLocalesDir)*.resources" />
    </ItemGroup>

    <RemoveDir Directories="$(LocalModDir)" />
    <Copy SourceFiles="@(ModFiles)" DestinationFolder="$(LocalModDir)" />
    <Copy SourceFiles="@(ResourceFiles)" DestinationFolder="$(LocalModDir)Locales" />
  </Target>
</Project>